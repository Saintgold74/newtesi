% ===== ACRONIMI PRINCIPALI =====

\newglossaryentry{gdo}{
    name=GDO,
    description={Grande Distribuzione Organizzata - Settore del commercio al dettaglio caratterizzato da catene di punti vendita con gestione centralizzata e volumi significativi}
}
\newglossaryentry{rfid}{
    name=RFId,
    description={Radio Frequency Identification}
}
\newglossaryentry{sku}{
    name=SKU,
    description={Stock Keeping Unit}
}

% ===== STANDARD E NORMATIVE =====

\newglossaryentry{pci-dss}{
    name=PCI-DSS,
    description={Payment Card Industry Data Security Standard - Standard di sicurezza internazionale per la protezione dei dati delle carte di pagamento, richiesto per tutti gli esercenti che processano transazioni con carte di credito}
}

\newglossaryentry{gdpr}{
    name=GDPR,
    description={General Data Protection Regulation - Regolamento (UE) 2016/679 sulla protezione dei dati personali e sulla libera circolazione di tali dati nell'Unione Europea}
}

\newglossaryentry{nis2}{
    name=NIS2,
    description={Network and Information Security Directive 2 - Direttiva (UE) 2022/2555 relativa a misure per un livello comune elevato di cibersicurezza nell'Unione}
}

% ===== METRICHE E KPI =====

\newglossaryentry{tco}{
    name=TCO,
    description={Total Cost of Ownership - Metodologia di valutazione che considera tutti i costi diretti e indiretti sostenuti durante l'intero ciclo di vita di un sistema informatico}
}

\newglossaryentry{mtbf}{
    name=MTBF,
    description={Mean Time Between Failures - Tempo medio intercorrente tra guasti consecutivi di un sistema, utilizzato come indicatore di affidabilità}
}

\newglossaryentry{mttr}{
    name=MTTR,
    description={Mean Time To Recovery - Tempo medio necessario per ripristinare la piena operatività di un sistema dopo un guasto o un incidente}
}

% ===== METODOLOGIE E FRAMEWORK =====

\newglossaryentry{mcdm}{
    name=MCDM,
    description={Multi-Criteria Decision Making - Metodologia per supportare decisioni complesse che coinvolgono criteri multipli e spesso conflittuali}
}

% ===== TECNOLOGIE DI RETE =====

\newglossaryentry{sd-wan}{
    name=SD-WAN,
    description={Software-Defined Wide Area Network - Architettura di rete che estende i principi della virtualizzazione alle reti geografiche, permettendo controllo centralizzato e ottimizzazione dinamica del traffico}
}

% ===== CLOUD E VIRTUALIZZAZIONE =====

\newglossaryentry{iaas}{
    name=IaaS,
    description={Infrastructure as a Service - Modello di cloud computing che fornisce risorse di calcolo virtualizzate attraverso Internet}
}

\newglossaryentry{paas}{
    name=PaaS,
    description={Platform as a Service - Modello di cloud computing che fornisce una piattaforma di sviluppo e deployment completa attraverso Internet}
}

\newglossaryentry{saas}{
    name=SaaS,
    description={Software as a Service - Modello di distribuzione software in cui le applicazioni sono fornite attraverso Internet come servizio}
}

% ===== SICUREZZA INFORMATICA =====

\newglossaryentry{siem}{
    name=SIEM,
    description={Security Information and Event Management - Soluzione software che aggrega e analizza dati di sicurezza da diverse fonti per identificare minacce e incidenti}
}

\newglossaryentry{soc}{
    name=SOC,
    description={Security Operations Center - Centro operativo dedicato al monitoraggio, rilevamento e risposta agli incidenti di sicurezza informatica}
}

\newglossaryentry{iam}{
    name=IAM,
    description={Identity and Access Management - Framework di processi e tecnologie per gestire identità digitali e controlli di accesso}
}

% ===== EDGE COMPUTING =====

\newglossaryentry{edge}{
    name=Edge Computing,
    description={Paradigma di elaborazione distribuita che porta computazione e storage vicino alle sorgenti di dati per ridurre latenza e migliorare performance}
}

\newglossaryentry{iot}{
    name=IoT,
    description={Internet of Things - Rete di dispositivi fisici interconnessi attraverso Internet, dotati di sensori e capacità di comunicazione}
}

% ===== DEVELOPMENT E DEVOPS =====

\newglossaryentry{cicd}{
    name=CI/CD,
    description={Continuous Integration/Continuous Deployment - Pratiche di sviluppo software che enfatizzano integrazione frequente del codice e deployment automatizzato}
}

\newglossaryentry{iac}{
    name=IaC,
    description={Infrastructure as Code - Pratica di gestione dell'infrastruttura IT attraverso codice versionato e automatizzato}
}

% ===== METODOLOGIE AGILI =====

\newglossaryentry{devops}{
    name=DevOps,
    description={Metodologia che integra sviluppo software (Dev) e operazioni IT (Ops) per accelerare il ciclo di vita dello sviluppo software}
}

\newglossaryentry{devsecops}{
    name=DevSecOps,
    description={Estensione di DevOps che integra la sicurezza (Sec) nel processo di sviluppo e deployment software}
}

% ===== BUSINESS CONTINUITY =====

\newglossaryentry{rto}{
    name=RTO,
    description={Recovery Time Objective - Tempo massimo accettabile per il ripristino di un servizio dopo un'interruzione}
}

\newglossaryentry{rpo}{
    name=RPO,
    description={Recovery Point Objective - Quantità massima accettabile di perdita di dati in caso di interruzione del servizio}
}

\newglossaryentry{bcp}{
    name=BCP,
    description={Business Continuity Plan - Piano strategico per garantire la continuità operativa dell'organizzazione durante e dopo eventi disruptivi}
}

% ===== ANALYTICS E AI =====

\newglossaryentry{ml}{
    name=ML,
    description={Machine Learning - Sottocampo dell'intelligenza artificiale che utilizza algoritmi per permettere ai sistemi di imparare automaticamente dai dati}
}

\newglossaryentry{ai}{
    name=AI,
    description={Artificial Intelligence - Simulazione di processi di intelligenza umana attraverso sistemi informatici}
}

\newglossaryentry{bi}{
    name=BI,
    description={Business Intelligence - Insieme di strategie e tecnologie per l'analisi dei dati aziendali per supportare decisioni strategiche}
}

% ===== PERFORMANCE E MONITORING =====

\newglossaryentry{sla}{
    name=SLA,
    description={Service Level Agreement - Contratto che definisce i livelli di servizio attesi tra fornitore e cliente}
}

\newglossaryentry{kpi}{
    name=KPI,
    description={Key Performance Indicator - Metrica utilizzata per valutare l'efficacia nel raggiungimento di obiettivi strategici}
}

\newglossaryentry{apm}{
    name=APM,
    description={Application Performance Monitoring - Monitoraggio e gestione delle prestazioni e disponibilità delle applicazioni software}
}

