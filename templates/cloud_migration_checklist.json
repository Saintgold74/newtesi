  "scoring": {
    "method": "weighted_average",
    "critical_items_required": true,
    "critical_multiplier": 1.5,
    "formula": "SUM(category_weight * category_score) where category_score = SUM(item_score * critical_multiplier_if_applicable) / items_count"
  },
  "migration_phases": [
    {
      "phase": 1,
      "name": "Assessment & Planning",
      "required_score": 75,
      "critical_categories": ["infrastructure", "applications", "security"]
    },
    {
      "phase": 2,
      "name": "Pilot Migration",
      "required_score": 85,
      "critical_categories": ["data", "security", "compliance"]
    },
    {
      "phase": 3,
      "name": "Full Migration",
      "required_score": 95,
      "critical_categories": ["all"]
    }
  ],
  "usage_instructions": {
    "assessment_process": [
      "1. Review each item in the checklist",
      "2. Update status field (not_started, in_progress, completed, not_applicable)",
      "3. Add verification evidence in notes field",
      "4. Calculate category scores based on weighted items",
      "5. Determine overall readiness level",
      "6. Generate action plan for gaps"
    ],
    "scoring_calculation": [
      "1. Each item receives score based on status (0-100)",
      "2. Critical items receive 1.5x multiplier",
      "3. Category score = average of item scores in category",
      "4. Overall score = weighted average of category scores",
      "5. Readiness level determined by overall score"
    ],
    "tools": [
      "Use provided scripts to automate technical assessments",
      "Generate reports in JSON/PDF format",
      "Track progress over time",
      "Export action plans"
    ]
  }
